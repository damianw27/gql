{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "strict": false,
    "newLine": "lf",
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "$/*": ["src/*"],
      "$latest/*": ["src/latest/*"],
      "$types/*": ["src/types/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
