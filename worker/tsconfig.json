{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "newLine": "lf",
    "allowJs": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "$root/*": [
        "src/*"
      ],
      "$latest/*": [
        "src/latest/*"
      ],
      "$shared/*": [
        "src/shared/*"
      ],
      "$test/*": [
        "test/*"
      ],
      "$test-helpers/*": [
        "test/__helpers__/*"
      ],
      "$types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}
