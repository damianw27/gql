{
  "env": {
    "es2021": true
  },
  "extends": [
    "alloy",
    "alloy/typescript",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "printWidth": 80
      }
    ]
  },
  "ignorePatterns": [
    "src/generated/**/*",
    "scripts/**/*"
  ]
}