{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["es2015", "dom"],
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowJs": true,
    "outDir": "./dist",
    "declarationDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "$root/*": [
        "src/*"
      ],
      "$declarations/*": [
        "src/declarations/*"
      ],
      "$types/*": [
        "src/types/*"
      ],
      "$versions/*": [
        "src/versions/*"
      ],
      "$test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
